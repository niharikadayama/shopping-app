{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "noImplicitAny": false,
      "baseUrl": "src",
      "paths": {
        "components":["components"],
        "theme":["theme"],
        "assets":["assets"],
        "constants":["constants"]
      }
    },

    "include": ["src"],

    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }